# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# --- User ---
POST    /login                      controllers.api.UserController.login()


# --- Notification ---
+user
GET     /get                        controllers.api.NotificationController.getAllEmailLists()
+user
GET     /get/:id                    controllers.api.NotificationController.getEmailList(id: Long)
+user
POST    /create-email-list          controllers.api.NotificationController.createEmailList
+user
PUT     /edit-email-list            controllers.api.NotificationController.editEmailList
+user
POST    /delete-email-list          controllers.api.NotificationController.deleteEmailList

